<Window x:Class="CurshachCTO1.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authorization" Height="250" Width="300">
    <Grid>
        <TextBlock Text="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,30,0,0"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="30,60,0,0"/>
        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,100,0,0"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="30,130,0,0"/>
        <Button Content="Login" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,180,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
